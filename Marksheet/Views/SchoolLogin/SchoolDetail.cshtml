@model Marksheet.Models.School
@{
    ViewBag.Title = "AdminDetial";
    Layout = "~/Views/Shared/_LayoutSchool.cshtml";
}
<style>
    img {
        border-radius: 50%;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>



<div class="card mb-4 col-md-8">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">School Detail</h3>
    </div>
    <div class="center">
        <img class="Circle" src="@Session["imageUrl"].ToString()" onerror="this.onload = null; this.src='/staticimg/school.jpg';" width="200" height="170" />
    </div>

    <div style="padding-top:10px;">
        <table class="table table-bordered" id="myTable">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SchoolName)
                </th>
                <td>


                    @Html.DisplayFor(model => model.SchoolName)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Slogan)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Slogan)
                </td>
            </tr>

            <tr>
                <th>
                    Mobile
                </th>
                <td>


                    @Html.DisplayFor(model => model.Phone1)
                </td>
            </tr>

            <tr>
                <th>
                    Phone
                </th>
                <td>


                    @Html.DisplayFor(model => model.Phone2)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Address)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Details)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Details)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.URL)
                </th>
                <td>


                    @Html.DisplayFor(model => model.URL)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <td>


                    @Html.DisplayFor(model => model.State)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Municipality)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Municipality)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WardNo)
                </th>
                <td>


                    @Html.DisplayFor(model => model.WardNo)
                </td>
            </tr>
        </table>

    </div>
</div>


