@model IEnumerable<Marksheet.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-4">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Subject</h3>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-outline-primary" })
        </p>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>
                        Subject Name
                    </th>
                    <th>
                        Th Fullmark
                    </th>
                    <th>
                        Pr Fullmark
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.HasPractical)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TFullMarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PFullMarks)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.HasPractical)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {


    <script type="text/javascript">

        $(document).ready(function () {
            $("body div.myTable input");
            var dataSrc = [];

            var table = $("#myTable").DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 3 }

                ],
                "pageLength": 50,


            });
        });




    </script>
}