@model List<Marksheet.ViewModels.MarksheetVM>

@{
    ViewBag.Title = "MarkSheet Entry";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@*<style>
    .container-fluid {
        overflow-x: scroll;
    }
</style>*@
<div class="card">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Student Terminal Mark Entry </h3>
    </div>
    <div class="card-body"  style="overflow-x:scroll;">


        <div class="row">

            @using (Html.BeginForm("Add", "Marksheet", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.ValidationSummary()
                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                    <div class="row">
                        <div class="col-md-2">
                            <label>Terminal</label>
                            @Html.DropDownList("Term", Model[0].Terminal, "--Select--", new { @class = "form-control", id = "ddlTerm" })
                        </div>
                        <div class="col-md-2">
                            <label>Academic Year</label>
                            @Html.DropDownList("ActiveYearId", Model[0].AcademicYears, "--Select--", new { @class = "form-control", id = "ddlActiveYear" })
                        </div>

                        
                        <div class="col-md-2">
                            <label style="font-size:20px;">School Name:</label><br>
                          <b> @Model[0].School</b>
                        </div>
                    </div>
                <div class="col-md-12">&nbsp;</div>

                <table class="table table-bordered" id="dataTable" border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <th rowspan="2">Student Name</th>
                        <th rowspan="2">Attendance</th>
                        <th colspan="2">English</th>
                        <th rowspan="2">Comp. Math</th>
                        <th colspan="2">Nepali</th>
                        <th colspan="2">Social Studies</th>
                        <th colspan="2">Science</th>
                        <th colspan="2">Health&Pop.</th>
                        <th colspan="2">OBTE</th>
                        <th colspan="2">Moral</th>

                        @if (Model[0].Opt1HasPractical)
                        {
                            <th colspan="2">@Model[0].Optional1Name</th>
                        }
                        else
                        {
                            <th rowspan="2">@Model[0].Optional1Name</th>

                        }


                    </tr>
                    <tr>
                        <th style="width:51px;">PR</th>
                        <th style="width:51px;">TH</th>

                        <th>PR</th>
                        <th>TH</th>

                        <th>PR</th>
                        <th>TH</th>

                        <th>PR</th>
                        <th>TH</th>

                        <th>PR</th>
                        <th>TH</th>

                        <th>PR</th>
                        <th>TH</th>

                        <th>PR</th>
                        <th>TH</th>
                        @if (Model[0].Opt1HasPractical)
                        {
                            <th>PR</th>
                            <th>TH</th>
                        }





                    </tr>
                    @if (Model != null && Model.Count > 0)
                    {
                        int j = 0;
                        foreach (var i in Model)
                        {
                            <tr id="dataRow">
                                <td>@Model[j].StudentName</td>
                                <td>@Html.TextBoxFor(a => a[j].Attendance, "0", new { @class = "form-control", id = "txtAttendance" })</td>
                                <td>@Html.TextBoxFor(a => a[j].EnglishPM, "0", new { @class = "form-control", id = "txtEngPr", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].EnglishTM, "0", new { @class = "form-control", id = "txtEng", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].MathTM, "0", new { @class = "form-control", id = j + "txtMath", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].NepaliPM, "0", new { @class = "form-control", id = "txtNepali", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].NepaliTM, "0", new { @class = "form-control", id = "txtNepali", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].SocialPM, "0", new { @class = "form-control", id = "txtSocial", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].SocialTM, "0", new { @class = "form-control", id = "txtSocial", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].SciencePM, "0", new { @class = "form-control", id = "txtSciencePr", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].ScienceTM, "0", new { @class = "form-control", id = "txtScienceTh", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].HealthPM, "0", new { @class = "form-control", id = "txtHealthPr", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].HealthTM, "0", new { @class = "form-control", id = "txtHealthTh", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].ObtePM, "0", new { @class = "form-control", id = "txtObtrePr", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].ObteTM, "0", new { @class = "form-control", id = "txtObteTh", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].MoralPM, "0", new { @class = "form-control", id = "txtMoralPr", style = "width:45px;" })</td>
                                <td>@Html.TextBoxFor(a => a[j].MoralTM, "0", new { @class = "form-control", id = "txtMoralTh", style = "width:45px;" })</td>

                                @if (Model[0].Opt1HasPractical)
                                {
                                    <td>@Html.TextBoxFor(a => a[j].Optional1PM, "0", new { @class = "form-control", id = "txtOpt1Pr", style = "width:45px;" })</td>
                                    <td>@Html.TextBoxFor(a => a[j].Optional1TM, "0", new { @class = "form-control", id = "txtOpt1Th", style = "width:45px;" })</td>
                                }
                                else
                                {
                                    <td>@Html.TextBoxFor(a => a[j].Optional1TM, "0", new { @class = "form-control", id = "txtOpt1Pr", style = "width:45px;" })</td>
                                }

                                @Html.HiddenFor(a => a[j].Id)
                                @Html.HiddenFor(a => a[j].StudentId)
                                @Html.HiddenFor(a => a[j].SchoolId)
                                @Html.HiddenFor(a => a[j].AcedamicYearId)
                                @Html.HiddenFor(a => a[j].Opt1HasPractical)
                                @Html.HiddenFor(a => a[j].AcademicYear)
                                @Html.HiddenFor(a => a[j].School)
                                @Html.HiddenFor(a => a[j].StudentName)

                            </tr>
                            j++;
                        }
                    }
                </table>

                <div class="col-md-12 text-center">
                    <input type="submit" value="Submit" class="btn btn-primary" id="btnSubmit" />
                    @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-info" })
                </div>

            }
        </div>
    </div>
</div>

