@model Marksheet.Models.AcademicYear

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card col-md-7 col-md-offset-5">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Academic Year</h3>
    </div>
    <div class="card-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Fiscal Year</label>

                        @Html.EditorFor(model => model.FiscalYear, new { htmlAttributes = new { @class = "form-control", placeholder = "eg 2075/2076" } })
                        @Html.ValidationMessageFor(model => model.FiscalYear, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Year</label>

                        @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", placeholder = "eg 2075" } })
                        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                    @Html.LabelFor(model => model.ActiveYear, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.ActiveYear)
                            @Html.ValidationMessageFor(model => model.ActiveYear, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>*@

                <div class="col-md-12" style="text-align:center; padding-top:15px;">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>


