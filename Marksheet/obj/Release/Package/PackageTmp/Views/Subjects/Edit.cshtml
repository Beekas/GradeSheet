@model Marksheet.Models.Subject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="card">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Subject</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Subject Name</label>

                        @Html.EditorFor(model => model.SubName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SubName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Theory Fullmark</label>

                        @Html.EditorFor(model => model.TFullMarks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TFullMarks, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Practical Fullmark</label>

                        @Html.EditorFor(model => model.PFullMarks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PFullMarks, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Theory Passmark</label>

                        @Html.EditorFor(model => model.TPassMarks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TPassMarks, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Practical Passmark</label>

                        @Html.EditorFor(model => model.PPassMarks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PPassMarks, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="col-md-2">
                    <div class="form-group">
                        <label>Optional</label>

                        <div class="checkbox">
                            @Html.EditorFor(model => model.Optional)
                            @Html.ValidationMessageFor(model => model.Optional, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label>Has Practical</label>

                        <div class="checkbox">
                            @Html.EditorFor(model => model.HasPractical)
                            @Html.ValidationMessageFor(model => model.HasPractical, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="col-md-12" style="text-align:center; padding-top:15px;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>



