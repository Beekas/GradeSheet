@model Marksheet.Models.Account

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    img {
        border-radius: 50%;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>



<div class="card mb-4 col-md-8">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Account</h3>
    </div>
    <div class="center">
        <img src="@Url.Content(Model.PPSizePhoto)" onerror="this.onload = null; this.src='/staticimg/defschoollogo.png';" width="200" height="170" />
    </div>

    <div style="padding-top:10px;">
        <table class="table table-bordered" id="myTable">

            <tr>
                <th>
                    Account Name
                </th>

                <td>
                    @Html.DisplayFor(model => model.FullName)
                </td>
            </tr>
            <tr>
                <th>
                    Email
                </th>

                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th>
                    User Name
                </th>

                <td>
                    @Html.DisplayFor(model => model.UserName)
                </td>
            </tr>
            <tr>
                <th>
                    Phone
                </th>

                <td>
                    @Html.DisplayFor(model => model.Phone)
                </td>
            </tr>
            <tr>
                <th>
                    Work No
                </th>

                <td>
                    @Html.DisplayFor(model => model.WorkPhone)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.URL)
                </th>

                <td>

                    @Html.DisplayFor(model => model.URL)
                </td>
            </tr>


            @*<tr>
                    <th>
                        Image
                    </th>

                    <td>
                        <img src="@Url.Content(Model.PPSizePhoto)" width="100" height="100" />
                    </td>
                </tr>*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>

                <td>
                    @Model.CreatedDate.ToShortDateString()
                </td>

            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedDate)
                </th>

                <td>
                    @Model.ModifiedDate.ToShortDateString()
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>

                <td>
                    @Html.DisplayFor(model => model.CreatedBy)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>

                <td>
                    @Html.DisplayFor(model => model.ModifiedBy)
                </td>
            </tr>
        </table>

    </div>
    <p>

        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" })
    </p>
</div>

