@model Marksheet.Models.Student

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-4 col-md-8">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Student</h3>
    </div>

    <div style="padding-top:10px;">
        <table class="table table-bordered" id="myTable">
            <tr>
                <th>
                   School Name
                </th>
                <td>


                    @Html.DisplayFor(model => model.School.SchoolName)
                </td>
            </tr>

            <tr>
                <th>
                   Student Name
                </th>
                <td>


                    @Html.DisplayFor(model => model.StudentName)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Address)
                </td>
            </tr>

            <tr>
                <th>
                    Father Name
                </th>
                <td>


                    @Html.DisplayFor(model => model.FatherName)
                </td>
            </tr>

            <tr>
                <th>
                   Mother Name
                </th>
                <td>


                    @Html.DisplayFor(model => model.MotherName)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Phone)
                </td>
            </tr>
            <tr>
                <th>
                    Symbol No
                </th>
                <td>


                    @Html.DisplayFor(model => model.SymbolNo)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Sex)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Class)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <td>


                    @Model.DOB.ToShortDateString()
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <td>


                    @Html.DisplayFor(model => model.Mobile)
                </td>
            </tr>

        </table>
    </div>
    <p>

        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" })
    </p>
</div>