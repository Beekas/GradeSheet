
@{
    ViewBag.Title = "SelectSchool Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">School For Mark Entry</h3>
    </div>
    <div class="card-body">
      
            <div class="col-md-12">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

            </div>
            @using (Html.BeginForm("Add", "MarkSheet", FormMethod.Get))
            {
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Select School</label>
                        @Html.DropDownList("SchoolId", new SelectList(ViewBag.SchoolId, "value", "text"), "--Select--", new { @class = "form-control", id = "ddlSchool" })
                    </div>

                </div>
                <div class="col-md-12">
                    <label></label>
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            }

        
    </div>
</div>


