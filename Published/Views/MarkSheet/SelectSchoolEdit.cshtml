
@{
    ViewBag.Title = "SelectSchoolEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Edit Student Terminal Mark Entry </h3>
    </div>
    <div class="card-body">

        <div class="col-md-12">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

        </div>
        @using (Html.BeginForm("Edit", "MarkSheet", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Select School</label>
                        @Html.DropDownList("SchoolId", null, new { @class = "form-control", id = "ddlSchool" })
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Select Year</label>
                        @Html.DropDownList("ActiveYearId", null, new { @class = "form-control", id = "ddlSchool" })
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Select Terminal</label>
                        @Html.DropDownList("Terminal", null, new { @class = "form-control", id = "ddlSchool" })
                    </div>

                </div>
            </div>
            <div class="col-md-12" style="text-align:center; padding-top:15px;">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }

    </div>
</div>


