@model IEnumerable<Marksheet.Models.School>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mb-4">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">School</h3>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-outline-primary" })
        </p>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>Logo</th>
                    <th>School Name</th>
                    <th>Address</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>

                            <img src="@Url.Content(item.Logo)" onerror="this.onload = null; this.src='/staticimg/defschoollogo.png';" width="100" height="50" />

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SchoolName)
                        </td>
                        <td>
                            @(item.Municipality + " " + item.WardNo)

                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })

                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@section Scripts {


    <script type="text/javascript">

        $(document).ready(function () {
            $("body div.myTable input");
            var dataSrc = [];

            var table = $("#myTable").DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 3 }

                ],
                "pageLength": 50,


            });
        });




    </script>
}