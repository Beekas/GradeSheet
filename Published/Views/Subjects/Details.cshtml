@model Marksheet.Models.Subject

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-4 col-md-8">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Subject</h3>
    </div>


    <div style="padding-top:10px;">
        <table class="table table-bordered" id="myTable">
            <tr>
                <th>
                    Subject Name
                </th>
                <td>


                    @Html.DisplayFor(model => model.SubName)
                </td>
            </tr>

            <tr>
                <th>
                    Theory Fullmark
                </th>
                <td>


                    @Html.DisplayFor(model => model.TFullMarks)
                </td>
            </tr>

            <tr>
                <th>
                    Practical Fullmark
                </th>
                <td>


                    @Html.DisplayFor(model => model.PFullMarks)
                </td>
            </tr>

            <tr>
                <th>
                    Practical Passmark
                </th>
                <td>


                    @Html.DisplayFor(model => model.PPassMarks)
                </td>
            </tr>

            <tr>
                <th>
                    Theory Passmark
                </th>
                <td>


                    @Html.DisplayFor(model => model.TPassMarks)
                </td>
            </tr>

            <tr>
                <th>
                    Optional Subject
                </th>
                <td>


                    @Html.DisplayFor(model => model.Optional)
                </td>
            </tr>

            <tr>
                <th>
                    Has Practical
                </th>
                <td>


                    @Html.DisplayFor(model => model.HasPractical)
                </td>
            </tr>

        </table>
    </div>
    <p>
       
        @Html.ActionLink("Back to List", "Index",new { },new { @class="btn btn-primary"})
    </p>
</div>