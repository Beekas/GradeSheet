@model IEnumerable<Marksheet.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mb-4">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Student</h3>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-outline-primary" })
        </p>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>
                        School Name
                    </th>
                    <th>
                       Student Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mobile)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.School.SchoolName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section Scripts {


    <script type="text/javascript">

        $(document).ready(function () {
            $("body div.myTable input");
            var dataSrc = [];

            var table = $("#myTable").DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 3 }

                ],
                "pageLength": 50,


            });
        });




    </script>
}